{
  "extends": "tomer/tsconfig",
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "~/private/*": ["./private/*"],
      "~/*": ["./src/*"]
    }
  }
}
