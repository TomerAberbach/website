  "scripts": {
    "prepare": "tomer install",
    "install-playwright": "playwright install --with-deps chromium",
    "format": "tomer format",
    "lint": "tomer lint",
    "typecheck": "tomer typecheck",
    "build": "cross-env NODE_ENV=production node --loader ts-node/esm scripts/build.ts",
    "clean": "tomer clean .cache build public/build private/fonts/build src/styles/build",
    "dev": "remix vite:dev",
    "test": "tomer test",
    "start": "remix-serve ./build/server/index.js",
    "deploy": "fly deploy --remote-only"
  },
  "eslintConfig": {
