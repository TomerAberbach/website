{
  "private": true,
  "name": "website",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">= 18"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "scripts": {
    "prepare": "tomer install",
    "install-playwright": "playwright install",
    "format": "tomer format",
    "lint": "tomer lint",
    "typecheck": "tomer typecheck",
    "build": "node --loader ts-node/esm scripts/build.ts",
    "clean": "tomer clean .cache build public/build private/fonts/build",
    "dev": "remix dev --manual",
    "test:watch": "cross-env NODE_ENV=test tomer test",
    "test": "npm run test:watch -- --watchAll=false",
    "start": "remix-serve ./build/index.js",
    "deploy": "fly deploy --remote-only"
  },
  "eslintConfig": {
    "root": true,
