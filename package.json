    "@testing-library/react": "^14.2.2",
    "@types/cssesc": "^3.0.2",
    "@types/hast": "^3.0.4",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.12.4",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@types/string-similarity": "^4.0.2",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "cssnano": "^6.1.2",
    "eslint": "^8.57.0",
    "glyphhanger": "^5.0.0",
    "jest": "^29.7.0",
    "make-dir-cli": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.43.0",
    "postcss": "^8.4.38",
    "postcss-fontpie": "^1.1.0",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "round-to": "^6.0.0",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.3",
    "terser": "^5.30.3",
    "tomer": "^3.0.4",
    "typescript": "^5.4.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "glyphhanger@5.0.0": "patches/glyphhanger@5.0.0.patch",
      "@zachleat/spider-pig@3.0.0": "patches/@zachleat__spider-pig@3.0.0.patch"
    }
  }
}
