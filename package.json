{
  "private": true,
  "name": "website",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">= 18"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "scripts": {
    "prepare": "tomer install",
    "install-playwright": "playwright install",
    "format": "tomer format",
    "lint": "tomer lint",
    "typecheck": "tomer typecheck",
    "build:1:clean": "tomer clean build public/build private/fonts/build",
    "build:1:fonts:make-dir": "make-dir private/fonts/build",
    "build:1:fonts:subset": "glyphhanger --formats=woff,woff2 --subset=private/fonts/*.ttf --output=private/fonts/build",
    "build:1:fonts": "run-s build:1:fonts:*",
    "build:1:remix": "remix build",
    "build:1": "run-s build:1:*",
    "build:2:fonts:subset": "glyphhanger http://localhost:3000 --spider-limit=0 --formats=woff,woff2 --subset=private/fonts/*.ttf --output=private/fonts/build",
    "build:2:fonts": "start-server-and-test start http-get://localhost:3000 build:2:fonts:subset",
    "build:2:clean": "tomer clean build public/build",
    "build:2:1": "run-s build:1:remix",
    "build:2:minify": "find public/build -name \\*.js -exec terser --module -c keep_fargs=false -o {} -- {} \\;",
    "build:2": "run-s build:2:*",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "clean": "tomer clean .cache build public/build private/fonts/build **/*.tsbuildinfo",
    "dev:remix": "remix dev --manual",
    "dev": "run-s build:1 dev:remix",
    "test:watch": "cross-env NODE_ENV=test tomer test",
    "test": "npm run test:watch -- --watchAll=false",
    "start": "remix-serve ./build/index.js",
    "deploy": "fly deploy --remote-only"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@tomer",
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^4.0.2",
    "@remark-embedder/cache": "^2.1.0",
    "@remark-embedder/core": "^3.0.2",
    "@remark-embedder/transformer-oembed": "^3.0.0",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "@remix-run/server-runtime": "^2.8.1",
    "clsx": "^2.1.0",
    "colortranslator": "^4.1.0",
    "cssesc": "^3.0.0",
    "escape-goat": "^4.0.0",
    "escape-string-regexp": "^5.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-select": "^6.0.2",
    "hast-util-to-html": "^9.0.1",
    "hast-util-to-text": "^4.0.0",
    "hastscript": "^9.0.0",
    "isbot": "^5.1.4",
    "lfi": "2.1.0",
    "mdast-util-directive": "^3.0.0",
    "mdast-util-to-string": "^4.0.0",
    "memoize": "^10.0.0",
    "ngraph.forcelayout": "^3.3.1",
    "ngraph.graph": "^20.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-wrap-balancer": "^1.1.0",
    "reading-time": "^1.5.0",
    "rehype-dom-parse": "^5.0.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-mermaid": "^2.1.0",
    "rehype-parse": "^9.0.0",
    "rehype-preset-minify": "^7.0.0",
    "rehype-react": "^8.0.0",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-smartypants": "^2.1.0",
    "remark-stringify": "^11.0.0",
    "remix-utils": "^7.5.0",
    "sharp": "^0.33.3",
    "shiki": "^1.2.4",
    "string-similarity": "^4.0.4",
    "strip-markdown": "^6.0.0",
    "superjson": "^2.2.1",
    "svgo": "^3.2.0",
    "ts-extras": "^0.11.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.22.4"
