{
  "private": true,
  "name": "website",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "sideEffects": false,
  "engines": {
    "node": ">= 14.6"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "@tomer",
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "scripts": {
    "prepare": "tomer install",
    "format": "tomer format",
    "lint": "tomer lint",
    "typecheck": "tomer typecheck",
    "build:1:clean": "tomer clean build public/build private/fonts/build src/styles/build",
    "build:1:fonts:make-dir": "make-dir private/fonts/build",
    "build:1:fonts:subset": "glyphhanger --formats=woff,woff2 --subset=private/fonts/*.ttf --output=private/fonts/build",
    "build:1:fonts": "run-s build:1:fonts:*",
    "build:1:css:tailwind": "postcss ./src/styles/tailwind.css -o ./src/styles/build/tailwind.css",
    "build:1:css:fonts": "postcss ./src/styles/fonts.css -o ./src/styles/build/fonts.css",
    "build:1:css": "run-p build:1:css:*",
    "build:1:remix": "remix build",
    "build:1": "run-s build:1:*",
    "build:2:fonts:subset": "glyphhanger http://localhost:3000 --spider-limit=0 --formats=woff,woff2 --subset=private/fonts/*.ttf --output=private/fonts/build",
    "build:2:fonts": "start-server-and-test start http-get://localhost:3000 build:2:fonts:subset",
    "build:2:clean": "tomer clean build public/build src/styles/build",
    "build:2:1": "run-s build:1:css build:1:remix",
    "build:2:minify": "find public/build -name \\*.js -exec terser --module -c keep_fargs=false -o {} -- {} \\;",
    "build:2": "run-s build:2:*",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "clean": "tomer clean .cache build public/build private/fonts/build src/styles/build **/*.tsbuildinfo",
    "dev:css:tailwind": "postcss ./src/styles/tailwind.css -o ./src/styles/build/tailwind.css --watch",
    "dev:css:fonts": "postcss ./src/styles/fonts.css -o ./src/styles/build/fonts.css --watch",
    "dev:css": "run-p dev:css:*",
    "dev:remix": "remix dev",
    "dev": "npm-run-all build:1:fonts build:1:css -p dev:css dev:remix",
    "test:watch": "cross-env NODE_ENV=test tomer test",
    "test": "npm run test:watch -- --watchAll=false",
    "start": "remix-serve build",
    "deploy": "fly deploy --remote-only"
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@leafac/rehype-shiki": "^2.2.1",
    "@remark-embedder/cache": "^2.1.0",
    "@remark-embedder/core": "^3.0.1",
    "@remark-embedder/transformer-oembed": "^3.0.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@remix-run/server-runtime": "^1.15.0",
    "clsx": "^1.2.1",
    "colortranslator": "^1.10.2",
    "cssesc": "^3.0.0",
    "escape-goat": "^4.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-select": "^5.0.5",
    "lfi": "2.0.0-beta.1",
    "mem": "^9.0.2",
    "ngraph.forcelayout": "^3.3.1",
    "ngraph.graph": "^20.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-wrap-balancer": "^0.4.0",
    "reading-time": "^1.5.0",
    "rehype-dom-parse": "^4.0.2",
    "rehype-external-links": "^2.0.1",
    "rehype-katex": "^6.0.2",
    "rehype-preset-minify": "^6.0.0",
    "rehype-react": "^7.1.2",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-smartypants": "^2.0.0",
    "remark-stringify": "^10.0.2",
    "remix-utils": "^6.1.0",
    "sharp": "^0.32.0",
    "shiki": "^0.14.1",
    "string-similarity": "^4.0.4",
    "strip-markdown": "^5.0.0",
    "superjson": "^1.12.2",
    "ts-extras": "^0.11.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.15.0",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/cssesc": "^3.0.0",
    "@types/hast": "^2.3.4",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/sharp": "^0.31.1",
    "@types/string-similarity": "^4.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.0",
    "cypress": "^12.9.0",
    "eslint": "^8.38.0",
    "glyphhanger": "^5.0.0",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "make-dir-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "round-to": "^5.0.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.1",
    "terser": "^5.16.8",
    "tomer": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "glyphhanger@5.0.0": "patches/glyphhanger@5.0.0.patch",
      "@zachleat/spider-pig@3.0.0": "patches/@zachleat__spider-pig@3.0.0.patch"
    }
  }
}
