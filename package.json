{
  "private": true,
  "name": "website",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "sideEffects": false,
  "engines": {
    "node": ">= 14.6"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "prettier": "tomer/prettier",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@tomer",
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "scripts": {
    "prepare": "tomer install",
    "format": "tomer format",
    "lint:src": "tomer lint --parser-options '{ \"project\": \"src/tsconfig.json\" }' -- src",
    "lint:test:unit": "tomer lint --parser-options '{ \"project\": \"test/tsconfig.json\" }' -- test",
    "lint:test:e2e": "tomer lint --parser-options '{ \"project\": \"cypress/tsconfig.json\" }' -- cypress",
    "lint": "run-p lint:**",
    "typecheck:src": "tomer typecheck -p src/tsconfig.json",
    "typecheck:test:unit": "tomer typecheck -p test/tsconfig.json",
    "typecheck:test:e2e": "tomer typecheck -p cypress/tsconfig.json",
    "typecheck": "run-p typecheck:**",
    "build:css": "postcss ./src/styles/index.css -o ./src/styles/build.css",
    "build:remix": "remix build",
    "build": "cross-env NODE_ENV=production run-s clean build:*",
    "dev:css": "postcss ./src/styles/index.css -o ./src/styles/build.css --watch",
    "dev:remix": "remix dev",
    "dev": "npm-run-all build:css -p dev:*",
    "cy": "cypress run --browser chrome",
    "test:unit": "tomer test --no-watch",
    "test:e2e": "start-server-and-test dev http-get://localhost:3000 cy",
    "test": "run-p test:*",
    "start": "remix-serve build",
    "deploy": "fly deploy --remote-only"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.12",
    "@leafac/rehype-shiki": "^2.2.1",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@remix-run/server-runtime": "^1.7.2",
    "clsx": "^1.2.1",
    "cssesc": "^3.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-select": "^5.0.2",
    "lfi": "2.0.0-beta.0",
    "ngraph.forcelayout": "^3.3.1",
    "ngraph.graph": "^20.0.1",
    "octokit": "^2.0.7",
    "panzoom": "^9.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "rehype-dom-parse": "^4.0.2",
    "rehype-external-links": "^2.0.1",
    "rehype-preset-minify": "^6.0.0",
    "rehype-react": "^7.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remix-utils": "^3.3.0",
    "shiki": "^0.11.1",
    "superjson": "^1.10.1",
    "unified": "^10.1.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@tailwindcss/typography": "^0.5.7",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/cssesc": "^3.0.0",
    "@types/hast": "^2.3.4",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.8.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "cypress": "^10.10.0",
    "eslint": "^8.23.1",
    "is-ci": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "tomer": "^0.2.10",
    "typescript": "^4.7.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "@eslint/eslintrc@1.3.3": "patches/@eslint__eslintrc@1.3.3.patch"
    }
  }
}
