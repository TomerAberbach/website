{
  "private": true,
  "name": "website",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "sideEffects": false,
  "engines": {
    "node": ">= 14.6"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "@tomer",
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "scripts": {
    "prepare": "tomer install",
    "format": "tomer format",
    "lint": "tomer lint",
    "typecheck": "tomer typecheck",
    "build:clean": "tomer clean build public/build",
    "build:css:tailwind": "postcss ./src/styles/tailwind.css -o ./src/styles/build/tailwind.css",
    "build:css:fonts": "postcss ./src/styles/fonts.css -o ./src/styles/build/fonts.css",
    "build:css": "run-p build:css:*",
    "build:remix": "remix build",
    "build-minify": "find public/build -name \\*.js -exec terser --module -c keep_fargs=false -o {} -- {} \\;",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "clean": "tomer clean .cache build public/build src/styles/build.css **/*.tsbuildinfo",
    "dev:css:tailwind": "postcss ./src/styles/tailwind.css -o ./src/styles/build/tailwind.css --watch",
    "dev:css:fonts": "postcss ./src/styles/fonts.css -o ./src/styles/build/fonts.css --watch",
    "dev:css": "run-p dev:css:*",
    "dev:remix": "remix dev",
    "dev": "npm-run-all build:css -p dev:*",
    "cy": "cross-env NODE_ENV=test cypress run --browser chrome",
    "test:unit:watch": "cross-env NODE_ENV=test tomer test",
    "test:unit": "npm run test:unit:watch -- --watchAll=false",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test dev http-get://localhost:3000 cy",
    "test": "run-p test:*",
    "start": "remix-serve build",
    "deploy": "fly deploy --remote-only"
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@heroicons/react": "^2.0.14",
    "@leafac/rehype-shiki": "^2.2.1",
    "@remark-embedder/cache": "^2.1.0",
    "@remark-embedder/core": "^3.0.1",
    "@remark-embedder/transformer-oembed": "^3.0.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@remix-run/server-runtime": "^1.12.0",
    "clsx": "^1.2.1",
    "cssesc": "^3.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-select": "^5.0.5",
    "lfi": "2.0.0-beta.1",
    "mem": "^9.0.2",
    "ngraph.forcelayout": "^3.3.1",
    "ngraph.graph": "^20.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "rehype-dom-parse": "^4.0.2",
    "rehype-external-links": "^2.0.1",
    "rehype-katex": "^6.0.2",
    "rehype-preset-minify": "^6.0.0",
    "rehype-react": "^7.1.2",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-smartypants": "^2.0.0",
    "remark-stringify": "^10.0.2",
    "remix-utils": "^6.0.0",
    "sharp": "^0.31.3",
    "shiki": "^0.14.0",
    "string-similarity": "^4.0.4",
    "strip-markdown": "^5.0.0",
    "superjson": "^1.12.2",
    "ts-extras": "^0.11.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.12.0",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/cssesc": "^3.0.0",
    "@types/hast": "^2.3.4",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.19",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/sharp": "^0.31.1",
    "@types/string-similarity": "^4.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "cypress": "^12.5.1",
    "eslint": "^8.33.0",
    "is-ci": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "round-to": "^5.0.0",
    "start-server-and-test": "^1.15.3",
    "tailwindcss": "^3.2.4",
    "tomer": "^1.2.0",
    "typescript": "^4.9.5"
  }
}
